<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/infoField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="info"
        android:textColor="#000000"
        android:textSize="28sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="24dp"
        android:paddingTop="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="counter"
            android:textColor="#000000"
            android:textSize="20sp" />

        <Button
            android:id="@+id/plusButton"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="+"
            android:textSize="20sp" />

        <Button
            android:id="@+id/minusButton"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="-"
            android:textSize="20sp" />

        <Button
            android:id="@+id/randomNumberButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="rnd"
            android:textSize="20sp" />

        <Button
            android:id="@+id/toZeroButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="0"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="24dp"
        android:paddingTop="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="info"
            android:textColor="#000000"
            android:textSize="20sp" />

        <Button
            android:id="@+id/showDeviceInfoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="device"
            android:textSize="20sp" />

        <Button
            android:id="@+id/showCurrentTimeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="time"
            android:textSize="20sp" />

        <Button
            android:id="@+id/toastButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="toast"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="24dp"
        android:paddingTop="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="color"
            android:textColor="#000000"
            android:textSize="20dp" />

        <Button
            android:id="@+id/setTextColorRedButton"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:text="r"
            android:textSize="20sp" />

        <Button
            android:id="@+id/setTextColorGreenButton"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:text="g"
            android:textSize="20sp" />

        <Button
            android:id="@+id/setTextColorBlueButton"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:text="b"
            android:textSize="20sp" />

        <Button
            android:id="@+id/setTextColorMagentaButton"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:text="M"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="24dp"
        android:paddingTop="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="background"
            android:textColor="#000000"
            android:textSize="20dp" />

        <Button
            android:id="@+id/setBackgroundColorBlack"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="1"
            android:textSize="20sp" />

        <Button
            android:id="@+id/setBackgroundColorYellow"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="2"
            android:textSize="20sp" />

        <Button
            android:id="@+id/setBackgroundColorGray"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="3"
            android:textSize="20sp" />

        <Button
            android:id="@+id/setBackgroundColorCyan"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="4"
            android:textSize="20sp" />
    </LinearLayout>


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="24dp"
            android:paddingTop="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="image"
                android:textColor="#000000"
                android:textSize="20dp" />

            <Button
                android:id="@+id/setCatImage"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="cat"
                android:textSize="12sp" />

            <Button
                android:id="@+id/setDogImage"
                android:layout_width="61dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="dog"
                android:textSize="12sp" />

            <Button
                android:id="@+id/setParrotImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="parrot"
                android:textSize="12sp" />

            <Button
                android:id="@+id/setRandomImage"
                android:layout_width="69dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="rnd"
                android:textSize="10sp" />
        </LinearLayout>
    </HorizontalScrollView>

    <ImageView
        android:id="@+id/image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:src="@drawable/cat" />

</LinearLayout>